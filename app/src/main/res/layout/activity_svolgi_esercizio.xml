<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allenamento.SvolgiEsercizioActivity">

    <TextView
        android:id="@+id/txtNumSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Serie n/tot"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomeEs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Esercizio attuale"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtNumSerie"
        app:layout_constraintStart_toStartOf="@+id/txtNumSerie"
        app:layout_constraintTop_toBottomOf="@+id/txtNumSerie"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNextEs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Esercizio successivo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeEs" />

    <TextView
        android:id="@+id/txtEsSucc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Altro esercizio"
        app:layout_constraintEnd_toEndOf="@+id/txtNextEs"
        app:layout_constraintStart_toStartOf="@+id/txtNextEs"
        app:layout_constraintTop_toBottomOf="@+id/txtNextEs" />

    <Button
        android:id="@+id/btnInterrompi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Interrompi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAvviaRec"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAvviaRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avvia recupero"
        app:layout_constraintBottom_toBottomOf="@+id/btnInterrompi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInterrompi"
        app:layout_constraintTop_toTopOf="@+id/btnInterrompi" />

    <TextView
        android:id="@+id/txtNumReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Numero ripetizioni"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNomeEs"
        app:layout_constraintStart_toStartOf="@+id/txtNomeEs"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeEs" />

    <TextView
        android:id="@+id/txtRepsSucc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ripetizioni es successivo"
        app:layout_constraintEnd_toEndOf="@+id/txtEsSucc"
        app:layout_constraintStart_toStartOf="@+id/txtEsSucc"
        app:layout_constraintTop_toBottomOf="@+id/txtEsSucc" />
</androidx.constraintlayout.widget.ConstraintLayout>