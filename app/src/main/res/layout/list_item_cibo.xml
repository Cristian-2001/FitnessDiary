<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="22dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="32dp"
    android:orientation="vertical"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDelete"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:text="NOME"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtQta"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:text="Categoria"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtQta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="QuantitÃ "
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/btnDelete"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/txtEnergia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCategoria"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Energia"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtLipidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEnergia"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Lipidi"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtProteine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLipidi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Proteine"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtCarboidrati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProteine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:text="Carboidrati"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnDownArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCarboidrati"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_down_arrow" />

        <RelativeLayout
            android:id="@+id/expandedRelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCarboidrati"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtAcidiGrassi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Acidi Grassi"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtColesterolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAcidiGrassi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Colesterolo"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtZuccheri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtColesterolo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Zuccheri"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtFibre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtZuccheri"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Fibre"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFibre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Sale"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btnUpArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSale"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_up_arrow" />

        </RelativeLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>