        <activity
            android:name=".allenamento.SvolgiEsercizioActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".allenamento.VisualizzaAllenamentoActivity"
            android:configChanges="orientation"
            android:exported="false"
